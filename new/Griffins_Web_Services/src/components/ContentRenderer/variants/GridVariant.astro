---
// src/components/ContentRenderer/variants/GridVariant.astro
/**
 * Grid Variant - Default responsive grid layout
 * Features: 1-6 columns, configurable gap, optional "View All" link
 */

import type { BaseVariantProps } from "../ContentRenderer.types";
import FeatureCard from "@/components/LoopComponents/FeatureCard";
import Button from "@/components/Button/Button";
import { shouldShowCollectionCTA } from "../utils/helpers";
import { toArray } from "@/utils/array";

interface Props extends BaseVariantProps {
  columns?: 1 | 2 | 3 | 4 | 5 | 6;
  gap?: "sm" | "md" | "lg" | "xl";
  ctaHref?: string;
  ctaText?: string;
}

const {
  items = [],
  title,
  description,
  className = "",
  columns = 3,
  gap = "md",
  collectionUrl,
  collectionTitle,
  id,
  showButtonSection = true,
  ctaHref,
  ctaText,
} = Astro.props as Props;

const safeItems = toArray(items);

const gapClasses = {
  sm: "gap-2",
  md: "gap-4",
  lg: "gap-6",
  xl: "gap-8",
};

const columnClasses = {
  1: "grid-cols-1",
  2: "grid-cols-1 md:grid-cols-2",
  3: "grid-cols-1 md:grid-cols-2 lg:grid-cols-3",
  4: "grid-cols-1 md:grid-cols-2 lg:grid-cols-4",
  5: "grid-cols-1 md:grid-cols-2 lg:grid-cols-5",
  6: "grid-cols-1 md:grid-cols-3 lg:grid-cols-6",
};

const getCardClassName = (item: any) =>
  [item?.class ?? item?.className ?? "", "h-full"].filter(Boolean).join(" ");

const getRingDuration = (item: Record<string, any>) =>
  typeof item?.ringDuration === "number" ? item.ringDuration : 800;
---

<section id={id} class={`py-16 ${className}`}>
  {(title || description) && (
    <div class="text-center mb-12">
      {title && <h2 class="text-4xl text-heading font-bold mb-4">{title}</h2>}
      {description && (
        <p class="text-lg text-text max-w-2xl mx-auto">{description}</p>
      )}
    </div>
  )}

  {safeItems.length > 0 && (
    <ul class={`grid ${columnClasses[columns]} ${gapClasses[gap]} list-none`}>
      {safeItems.map((item) => (
        <li>
          <FeatureCard
            client:visible
            data={item}
            ringDuration={getRingDuration(item)}
            className={getCardClassName(item)}
          />
        </li>
      ))}
    </ul>
  )}

  {showButtonSection &&
    shouldShowCollectionCTA(collectionUrl, safeItems.length) &&
    (ctaText || title || collectionTitle) &&
    (ctaHref || collectionUrl) && (
    <div class="buttons-section-center">
      <Button
        href={ctaHref ?? collectionUrl}
        rightIcon="lu:arrow-right"
        variant="primary"
      >
        {ctaText ?? `View All ${(title ?? collectionTitle ?? "").trim()}`}
      </Button>
    </div>
  )}
</section>
