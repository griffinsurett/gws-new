---
// src/components/ContentRenderer/variants/MasonryVariant.astro
/**
 * Masonry Variant - Pinterest-style CSS columns layout
 * Features: Variable height items, 1-4 responsive columns, compact layout
 */

import type { BaseVariantProps } from "../ContentRenderer.types";
import FeatureCard from "@/components/LoopComponents/FeatureCard";
import { shouldShowCollectionCTA } from "../utils/helpers";
import Button from "@/components/Button/Button";
import { toArray } from "@/utils/array";

interface Props extends BaseVariantProps {
  ctaHref?: string;
  ctaText?: string;
}

const {
  items = [],
  title,
  description,
  className = "",
  collectionUrl,
  collectionTitle,
  id,
  showButtonSection = true,
  ctaHref,
  ctaText,
} = Astro.props as Props;

const safeItems = toArray(items);

const getCardClassName = (item: any) =>
  ["break-inside-avoid mb-6", item?.class ?? item?.className ?? ""]
    .filter(Boolean)
    .join(" ");

const getRingDuration = (item: Record<string, any>) =>
  typeof item?.ringDuration === "number" ? item.ringDuration : 800;
---

<section id={id} class={`py-16 ${className}`}>
  {(title || description) && (
    <div class="text-center mb-12">
      {title && <h2 class="text-4xl text-heading font-bold mb-4">{title}</h2>}
      {description && (
        <p class="text-lg text-text max-w-2xl mx-auto">{description}</p>
      )}
    </div>
  )}

  {safeItems.length > 0 && (
    <ul class="columns-1 md:columns-2 lg:columns-3 xl:columns-4 gap-6 list-none">
      {safeItems.map(
        (item) =>
          item && (
            <li class="inline-block w-full">
              <FeatureCard
                client:visible
                data={item}
                ringDuration={getRingDuration(item)}
                className={getCardClassName(item)}
              />
            </li>
          ),
      )}
    </ul>
  )}

  {showButtonSection &&
    shouldShowCollectionCTA(collectionUrl, safeItems.length) &&
    (ctaText || title || collectionTitle) &&
    (ctaHref || collectionUrl) && (
    <div class="buttons-section-center">
      <Button
        client:visible
        href={ctaHref ?? collectionUrl}
        rightIcon="lu:arrow-right"
        variant="primary"
      >
        {ctaText ?? `View All ${(title ?? collectionTitle ?? "").trim()}`}
      </Button>
    </div>
  )}
</section>
