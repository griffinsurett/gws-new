---
// src/layouts/BaseLayout.astro
/**
 * Base Layout - Root HTML Structure
 * 
 * The foundation layout for all pages in the application.
 * Provides:
 * - HTML document structure
 * - Head section with meta tags, SEO, theme setup
 * - Body with main content slot and footer
 * - Global styles import
 * 
 * All other layouts should extend or use this as their base.
 * Ensures consistent structure and metadata across the entire site.
 */

import "../styles/global.css";
import HeadTags from "./HeadTags.astro";
import SEO from "./SEO.astro";
import Theme from "./Theme.astro";
import BodyTags from "./BodyTags.astro";
import Header from "./Header.astro"; 
import Footer from "./Footer.astro";
// Language detection removed - page always loads in English first
// Translation only happens when user explicitly selects a language

export interface Props {
  [key: string]: any;  // Accept any props for SEO component
}

const { ...seoProps } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="preload"
      href="/fonts/TikTok_Sans/TikTokSans-Latin.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
      fetchpriority="high"
    />
    <Theme />

    <meta name="generator" content={Astro.generator} />

    {/* SEO meta tags */}
    <SEO title={seoProps.title} {...seoProps} />
    
    {/* Additional head tags (analytics scripts, etc.) */}
    <HeadTags />

    {/* Optional noindex for unpublished content */}
    {seoProps.noindex && <meta name="robots" content="noindex,nofollow" />}
  </head>

  <body class="antialiased">
    <Header />

    {/* Body-level scripts and elements */}
    <BodyTags />

    {/* Scroll animation observer - vanilla JS, no React */}
    <script>
      import "@/scripts/scrollAnimations";
    </script>

    {/* Main app container with flex column for sticky footer */}
    <div id="app" class="min-h-screen flex flex-col">
      {/* Page content goes here */}
      <slot />
      
      {/* Footer at bottom - now contains both consent and accessibility */}
      <Footer />
    </div>
  </body>
</html>
