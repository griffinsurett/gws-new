---
// src/pages/index.astro
import BaseLayout from "@/layouts/BaseLayout.astro";
import Section from "@/components/Section/Section.astro";
import Card from "@/components/LoopComponents/Card";
import { SiteData } from "@/content/SiteData";
import { Image } from "astro:assets";
import HeroImage from "@/assets/computer-guy.png"
---
<BaseLayout title="Welcome to Greactstro!" description="Your gateway to amazing projects.">
  <!-- Hero Section -->
<Section
  variant="primaryHero"
  heading={{ text: SiteData.tagline, tagName: "h1", class: "h1" }}
  description={SiteData.description}
  buttons={[
    { text: "See Our CTA", link: "/contact-us", variant: "primary" },
  ]}
>
<div class="block" slot="imageColumn">
<Image
  src={HeroImage}
  alt="Hero Image"
  class="w-auto h-auto md:h-full object-contain md:object-cover z-30"
  />
</div>


</Section>
<div class="page-container">
  <!-- Services -->
  <Section
    collection="services"
    query="getAll"
  />

  <!-- Clients -->
  <Section
    sectionClass="animate-on-appear"
    collection="clients"
    query="getAll"
    heading={{ text: "Our Clients", tagName: "h2" }}
  />

  <!-- Projects -->
  <Section
    collection="projects"
    query="getAll"
    heading={{ text: "Our Projects", tagName: "h2" }}
  />

<!-- Testimonials -->
<Section
  collection="testimonials"
  query="getAll"
/>


  <Section collection="faq" query="getAll" />
</div>
</BaseLayout>